{
  "extends": "airbnb-base",
  "rules": {
    "arrow-parens": ["error", "always"],
    "max-len": "warn",
    "no-plusplus": ["warn", {
      "allowForLoopAfterthoughts": true
    }],
    "no-underscore-dangle": "off",
    "prefer-destructuring": "warn",
    "space-before-function-paren": ["error", "never"]
  }
}